generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Cliente {
  id             String     @id @default(uuid())
  nome           String
  dataNascimento String? 
  contato        String? 
  cpf            String? 
  documento      String? 
  cidade         String? 
  bairro         String? 
  rua            String? 
  numero         String? 
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Passageiro {
  id         String   @id @default(uuid())
  nome       String
  documento  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Usuario {
  id       Int    @id @default(autoincrement())
  email    String @unique
  senha    String
  nome     String
}
